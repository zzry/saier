<body class="main" background="images/back.jpg" style="background-attachment: fixed; background-size:100% 100%;background-repeat:no-repeat">
<!--定义头部标题-->
<div>
  <p class="header">6LoWPAN能源监控管理平台</p>
</div>
<!--定义登录框-->
<form action="/test" method="post" class="denglu">
  <div class="biaoti">
    <p>用户登录</p>
  </div>
  <div class="yonghuming">
    <input type="text" required placeholder="请输入用户名" id="username" name="username" class="layui-input" style="height:50px;border-radius:30px">
  </div>
  <div class="mima">
    <input type="password" required placeholder="请输入密码" id="password" name="password" class="layui-input" style="height:50px;border-radius:30px">
  </div>
  <div class="anniu">
    <button type="submit" id="btnnn" class="layui-btn-radius"  style="width:100px;height:50px;background-color:rgba(0,0,0,0.5)"><h3 style="color:#fff;font-size:1.7em">登录</h3></button>
  </div>
</form>
<!--定义IPv6落款-->
<div class="luokuan"><p>2018 Tianjin University IPv6</p></div>
</body>
