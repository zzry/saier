    }

    .denglu{
      background-color:rgba(0,0,0,0.5);
      position:absolute;
      width:500px;
      height:300px;
      left:0;
      right:0;
      top:0;
      bottom:0;
      margin:auto;
      border-radius:20px;
    }
    .biaoti{
      width:400px;
      height:50px;
      margin-left:50px;
      margin-top:20px;
      text-align: center;
      line-height:50px;
      font-size: 35px;
      color:#fff;
    }
    .yonghuming{
      width:400px;
      height:50px;
      margin-left:50px;
      margin-top:20px;
    }
    .mima{
      width:400px;
      height:50px;
      margin-left:50px;
      margin-top:20px;
    }
    .anniu{
      width:100px;
      height:50px;
      margin-left:200px;
      margin-top:20px;
      border-radius:30px;
    }
    .luokuan{
      width:100%;
      height:30px;
      color:#d8d8d8;
      text-align: center;
      position:absolute;
      bottom:17%;
      font-size: 20px;
    }

  </style>
